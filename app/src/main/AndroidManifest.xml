<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="de.mygrades">

    <uses-permission android:name="android.permission.INTERNET" />

    <application android:allowBackup="true" android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher" android:theme="@style/AppTheme">

        <!-- Test Activity -->
        <activity
            android:name=".view.activity.SelectUniversityActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Content Provider -->
        <provider
            android:authorities="de.mygrades.provider"
            android:name="de.mygrades.database.GradesProvider"
            android:exported="false" />

        !-- MainService -->
        <service android:name=".main.MainService" android:exported="false" />
    </application>

</manifest>
